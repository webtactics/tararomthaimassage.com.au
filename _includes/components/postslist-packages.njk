<section class="grid-4-columns postlist-packages" >
	{% for post in postslist | reverse %}
<div class="packsumhome">
		<article{% if post.url == url %} data-current="current item"{% endif %} >
			
<div class="packtitle">
<h2><a href="{{ post.url | url }}" title="{{ post.data.title }}" alt="{{ post.data.title }}" >{{ post.data.title }}</a></h2>
</div>

<div class="CGBlogSummaryField">
<a href="{{ post.url | url }}"  title="{{ post.data.title }}" alt="{{ post.data.title }}"><img src="{{ post.data.image }}/tr:w-400,h-200" alt="{{ post.data.imageAlt }}" title="{{ post.data.imageAlt }}" ></a>
</div>

<div class="packdesc">
	<p class="postsumhome">{{ post.data.description }}</p>
</div>



<div class="packageprice">  
{% if post.data.price %}<div class="timecostwrapper"><span class="timecostmin">Price:</span>{{ post.data.price }}</div>{% endif %}
</div>					



<div class="right newssumbutton">
<a class="button right"  title="{{ post.data.title }}" alt="{{ post.data.title }}" href="{{ post.url | url }}">Read more &gt;</a>
</div>





		</article>
		</div>
	{% endfor %}
</section>










